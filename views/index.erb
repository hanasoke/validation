<div class="container mt-5">
  <div class="row">
    <div class="col mb-3">
      <h1>Items</h1>
      <a href="/items/new" class="btn btn-success">Create New User</a>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover">
        <thead class="table-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Price</th>
            <th scope="col" colspan="2" class="text-center">Action</th>
          </tr>
        </thead>
        <tbody scope="table-group-divider">
          <% @items.each do |item|%>
          <tr>
            <td><%= item['name'] %></td>
            <td><%= item['email']%></td>
            <td><%= item['price'] %></td>
            <td>
              <a href="/items/<%= item['id'] %>/edit" class="btn btn-info">Edit</a>
            </td>
            <td>
              <form action="/items/<%= item['id'] %>/delete" method="POST">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
          <% end %>
        </tbody>
      </div>
    </div>
  </div>
</div>
