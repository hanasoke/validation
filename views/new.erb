<div class="container mt-5">
  <div class="row">
    <div class="col mb-3">
      <h1>Create a new item</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <% if @errors.any? %> 
      <% @errors.each do |error| %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div><%= error %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% end %> 
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <form action="/items" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= params[:name] %>" />
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= params[:email] %>" />
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" class="form-control" id="price" name="price" value="<%= params[:price] %>" />
        </div>
        <button type="submit" class="btn btn-primary float-end">Submit</button>
      </form>
      <a class="btn btn-secondary" href="/">Back</a>
    </div>
  </div>
</div>
